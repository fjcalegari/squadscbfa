<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        >

    <data>

        <import type="android.view.View"/>
        <import type="androidx.lifecycle.LiveData"/>

        <import type="com.calestu.squadscbfa.ui.base.Status" />

        <import type="com.calestu.squadscbfa.ui.base.Resource" />

        <import type="com.calestu.squadscbfa.ui.module.squad.add.model.SquadAddModel"/>

        <import type="com.calestu.squadscbfa.data.model.PlayerSquadModel"/>

        <import type="com.calestu.squadscbfa.data.model.CoachSquadModel"/>

        <import type="com.calestu.squadscbfa.data.model.type.FormationType"/>

        <variable
                name="playersquadmodel"
                type="PlayerSquadModel" />

        <variable
                name="coachsquadmodel"
                type="CoachSquadModel" />

        <variable
                name="viewmodel"
                type="com.calestu.squadscbfa.ui.module.squad.add.SquadAddViewModel" />

        <variable
                name="squad"
                type="LiveData&lt;Resource&lt;SquadAddModel>>" />

        <variable
                name="retryCallback"
                type="com.calestu.squadscbfa.ui.base.RetryCallback" />

        <variable
                name="playerCallback"
                type="com.calestu.squadscbfa.ui.module.squad.add.SquadPlayerUserActionsListener" />

        <variable
                name="coachCallback"
                type="com.calestu.squadscbfa.ui.module.squad.add.SquadCoachUserActionsListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guidelineHorizontalTopHeader"
                app:layout_constraintGuide_percent="0.1"
                android:orientation="horizontal"/>


        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/guidelineHorizontalTopHeader"
                app:srcCompat="@drawable/field"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:scaleType="fitXY"/>

        <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFormation"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                app:layout_constraintBottom_toTopOf="@id/guidelineHorizontalTopHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{squad.data.formation.title}"
                android:onClick="@{() -> viewmodel.clickedFormationButton(squad.data.formation.index)}"
                tools:text="4-4-2"
                app:icon="@drawable/ic_arrow_down"
                app:iconGravity="textStart"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                />

        <include
                android:id="@+id/formation442"
                layout="@layout/layout_formation_442_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                bind:viewmodel="@{viewmodel}"
                bind:squad="@{squad}"
                bind:playersquadmodel="@{playersquadmodel}"
                bind:coachsquadmodel="@{coachsquadmodel}"
                bind:playerCallback="@{playerCallback}"
                bind:coachCallback="@{coachCallback}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="@{squad.data.formation == FormationType.FORMATION_442 ? View.VISIBLE : View.GONE, default=visible}"/>

        <include
                android:id="@+id/formation433"
                layout="@layout/layout_formation_443"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="@{squad.data.formation == FormationType.FORMATION_433 ? View.VISIBLE : View.GONE, default=gone}"/>


        <include
                tools:visibility="gone"
                layout="@layout/loading_state"
                app:resource="@{(Resource) squad}"
                app:callback="@{() -> retryCallback.retry()}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/include"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
